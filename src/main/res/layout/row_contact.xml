<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/rowBackground"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_dp"
            android:layout_margin="@dimen/rowPadding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/contactDp"
            android:layout_height="@dimen/contactDp"/>

    <TextView
            android:id="@+id/tv_name"
            android:text="Name text"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/rowPadding"
            android:textColor="@color/font1"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textSize="@dimen/font1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_phone"
            android:text="Phone text"
            app:layout_constraintLeft_toRightOf="@+id/iv_dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:layout_marginLeft="@dimen/rowPadding"
            android:textColor="@color/font2"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textSize="@dimen/font2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <View
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/rowDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>